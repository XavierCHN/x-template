{
    "name": "x_template",
    "description": "a ts-react template for dota2 modding, together with some helper scripts",
    "license": "MIT",
    "repository": "https://github.com/XavierCHN/x-template",
    "scripts": {
        "lint": "eslint --ext .js,.ts,.tsx --quiet --fix \"./content/panorama/src/**/*.{js,ts,tsx}\" \"./game/scripts/src/**/*.{js,ts,tsx}\" \"./scripts/**/*.{js,ts,tsx}\"",
        "postinstall": "tsx scripts/install.ts",
        "launch": "tsx scripts/launch.ts",
        "prod": "tsx scripts/prepublish.ts && run-s prod:gulp prod:panorama prod:vscripts && tsx scripts/publish.ts",
        "prod:gulp": "gulp prod",
        "prod:panorama": "node --preserve-symlinks node_modules/webpack/bin/webpack.js --config content/panorama/webpack.prod.js && gulp compile_less",
        "prod:vscripts": "tstl --project game/scripts/tsconfig.json",
        "predev": "tsx scripts/install.ts && gulp predev",
        "dev": "run-p dev:gulp dev:panorama dev:vscripts",
        "dev:gulp": "gulp dev",
        "dev:panorama": "node --preserve-symlinks node_modules/webpack/bin/webpack.js --config content/panorama/webpack.dev.js --watch",
        "dev:vscripts": "tstl --project game/scripts/tsconfig.json --watch",
        "compile": "tsx scripts/compile.ts",
        "jssync": "gulp jssync",
        "api": "openapi --input scripts/server_api.json --output game/scripts/src/server --exportCore false"
    },
    "devDependencies": {
        "@babel/core": "^7.16.5",
        "@babel/preset-env": "^7.16.5",
        "@babel/preset-react": "^7.16.5",
        "@inquirer/prompts": "^2.1.1",
        "@moddota/dota-lua-types": "^4.36.0",
        "@moddota/panorama-types": "^1.35.0",
        "@types/cli-color": "^2.0.6",
        "@types/events": "^3.0.0",
        "@types/fs-extra": "^9.0.13",
        "@types/gulp": "^4.0.9",
        "@types/gulp-less": "^0.0.33",
        "@types/node": "^18.0.0",
        "@types/react": "^16.14.5",
        "@typescript-eslint/eslint-plugin": "^5.36.0",
        "@typescript-eslint/parser": "^5.36.0",
        "@typescript-to-lua/language-extensions": "^1.0.0",
        "after-all": "^2.0.2",
        "anymatch": "^3.1.2",
        "babel-loader": "^8.2.3",
        "classnames": "^2.3.1",
        "cors": "^2.8.5",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "file-loader": "^6.2.0",
        "fork-ts-checker-webpack-plugin": "^6.5.3",
        "fs-extra": "^9.1.0",
        "gulp": "^4.0.2",
        "gulp-dotax": "^1.2.5",
        "gulp-less": "^5.0.0",
        "gulp-replace": "^1.1.4",
        "less": "^4.1.2",
        "less-loader": "^11.0.0",
        "mkdirp": "^1.0.4",
        "npm-run-all": "^4.1.5",
        "openapi-typescript-codegen": "^0.23.0",
        "panorama-polyfill-x": "^0.1.2",
        "prettier": "^2.7.1",
        "pump": "^3.0.0",
        "react": "^16.14.0",
        "react-panorama-x": "^0.4.0",
        "replace-in-file-webpack-plugin": "^1.0.6",
        "rimraf": "^3.0.2",
        "steam-game-path": "^2.0.1",
        "terser-webpack-plugin": "^5.3.4",
        "ts-loader": "^8.1.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typescript": "~5.8.2",
        "typescript-to-lua": "^1.31.0",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.9.1",
        "webpack-panorama-x": "^0.4.0"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
